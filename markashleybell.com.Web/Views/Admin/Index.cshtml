@model List<markashleybell.com.Web.Models.ArticleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@section content {

    <h1>Articles</h1>

    <ul>

    @foreach(var article in Model) {

        <li><a href="/admin/edit/@article.ArticleID">@article.Title</a> <span>@article.Published.ToString("dddd, d MMMM yyyy HH:mm")</span></li>

    }

    </ul>

}